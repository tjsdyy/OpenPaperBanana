# PaperBanana Environment Variables
# Copy this file to .env and fill in your keys.

# Google Gemini (free, no credit card): https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ── Alternative Providers ──────────────────────────────────────────
# Apicore.ai (OpenAI-compatible VLM)
APICORE_API_KEY=your_apicore_api_key_here

# kie.ai Nano Banana Pro (image generation)
KIE_API_KEY=your_kie_api_key_here

# Optional: override the VLM base URL
# VLM_BASE_URL=https://api.apicore.ai/v1

# ── SSL ────────────────────────────────────────────────────────────
# Set to true to skip SSL certificate verification (corporate proxies)
SKIP_SSL_VERIFICATION=false

# ── Docker Deployment ──────────────────────────────────────────────
# Domain for Caddy HTTPS (use localhost for local dev)
# DOMAIN=localhost

# Provider selection (gemini | openrouter | apicore)
VLM_PROVIDER=gemini
VLM_MODEL=gemini-2.0-flash-exp
# VLM_BASE_URL=https://api.apicore.ai/v1

# Image provider (google_imagen | openrouter_imagen | nanobanana)
IMAGE_PROVIDER=google_imagen
IMAGE_MODEL=imagen-3.0-generate-001
